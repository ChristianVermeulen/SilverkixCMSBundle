{% extends 'SilverkixCMSBundle:Admin:index.html.twig' %}

{% block content -%}
    <h2><a href="{{path('admin_user')}}">User Management</a> &raquo; <a href="#" class="active">Edit User</a></h2>
    <h3>Edit {{entity.username}}</h3>
    <form action="{{ path('admin_user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        <div class="error">
            {{ form_errors(edit_form) }}
        </div>
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td>{{ form_label(edit_form.username) }}</td>
                <td>{{ form_widget(edit_form.username) }}</td>
                <td>{{ form_errors(edit_form.username) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(edit_form.password) }}</td>
                <td>{{ form_widget(edit_form.password) }}</td>
                <td>{{ form_errors(edit_form.password) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(edit_form.email) }}</td>
                <td>{{ form_widget(edit_form.email) }}</td>
                <td>{{ form_errors(edit_form.email) }}</td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Save"/>
                </td>
            </tr>
            {{ form_rest(edit_form) }}
        </table>
    </form>
{% endblock %}
