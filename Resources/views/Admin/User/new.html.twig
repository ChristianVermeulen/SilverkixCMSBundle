{% extends 'SilverkixCMSBundle:Admin:index.html.twig' %}

{% block content -%}
    <h2><a href="{{path('admin_user')}}">User Management</a> &raquo; <a href="#" class="active">Create User</a></h2>
    <h3>Create a new user</h3>

    <form action="{{ path('admin_user_create') }}" method="post" {{ form_enctype(form) }}>
        <div class="form-errors">
            {{ form_errors(form) }}
        </div>
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td>{{ form_label(form.username) }}</td>
                <td>{{ form_widget(form.username) }}</td>
                <td>{{ form_errors(form.username) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.password) }}</td>
                <td>{{ form_widget(form.password) }}</td>
                <td>{{ form_errors(form.password) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.email) }}</td>
                <td>{{ form_widget(form.email) }}</td>
                <td>{{ form_errors(form.email) }}</td>
            </tr>
            <tr>
                <td colspan="3">
                    <input type="submit" value="Save"/>
                </td>
            </tr>
        </table>
        {{ form_rest(form) }}
    </form>
{% endblock %}
